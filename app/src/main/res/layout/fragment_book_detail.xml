    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/title_book_detail"
            android:scaleType="fitStart"
            android:src="@drawable/film"
            app:layout_constraintEnd_toStartOf="@+id/book_author"
            app:layout_constraintHeight_min="220dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintWidth_percent=".5" />

        <TextView
            android:id="@+id/book_author"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/orson_scott_card"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:id="@+id/book_date"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_default"
            android:textIsSelectable="true"
            android:textSize="18sp"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:id="@+id/book_detail"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:text="@string/description"
            android:textIsSelectable="true"
            android:textSize="18sp"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
